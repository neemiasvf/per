<% title 'Registration' %>
<body class='bg-dark register-page'>
  <div class="container">
    <div class="card card-register mx-auto mt-5">
      <div class="card-header">Registration</div>
      <div class="card-body">

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.input :full_name, required: false, autofocus: true, placeholder: 'Enter full name' %>
          <%= render partial: 'partials/email_field', locals: {f: f, label: true } %>
          <div class="form-group">
            <div class="form-row">
              <%= f.input :password, required: false, placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), wrapper_html: { class: 'col-md-6' } %>
              <%= f.input :password_confirmation, required: false, placeholder: ("#{@minimum_password_length} characters minimum"), wrapper_html: { class: 'col-md-6' } %>
            </div>
          </div>
          <%= f.submit 'Register', class: 'btn btn-primary btn-block' %>
        <% end %>
        <div class='text-center mt-3'>
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>
</body>